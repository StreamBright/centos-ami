{
  "min_packer_version": "0.12.3",
  "variables": { },
  "builders": [{
    "type": "amazon-ebs",
    "communicator": "ssh",
    "ssh_pty": true,
    "region": "eu-central-1",
    "source_ami": "ami-572cfc38",
    "instance_type": "m4.large",
    "ssh_username": "centos",
    "ami_name": "centos7.3-2017-04-03",
