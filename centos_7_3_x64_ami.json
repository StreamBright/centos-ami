{
  "variables": {
    "iso": "http://ftp.freepark.org/pub/linux/distributions/centos/7.3.1611/isos/x86_64/CentOS-7-x86_64-Minimal-1611.iso",
    "checksum": "71a7aa147877b413497cdff5b1e0aa5bc0c9484f"
  },
  "builders": [
    {
      "type": "virtualbox-iso",
      "headless": true,

      "iso_url": "{{ user `iso` }}",
      "iso_checksum": "{{ user `checksum` }}",
      "iso_checksum_type": "sha1",

      "vm_name": "CentOS73_1611",
      "guest_os_type": "RedHat_64",
      "ssh_username": "root",
      "ssh_password": "pAkke3vbinsecure",
      "ssh_port": 22,
      "ssh_wait_timeout": "600s",
      "vboxmanage": [
        ["modifyvm", "{{.Name}}", "--memory", "2048"],
        ["modifyvm", "{{.Name}}", "--cpus", "2"],
        ["modifyvm", "{{.Name}}", "--audio", "none"]
      ],
      "disk_size": "10240",
      "http_directory": "http",
      "boot_command": [
        "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/ks.cfg<enter><wait>"
      ],
      "shutdown_command": "/sbin/halt -p"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "execute_command": "echo 'pAkke3vbinsecure' | {{.Vars}} sudo -S -E bash '{{.Path}}'",
      "scripts": [
        "scripts/finalize_vagrant.sh"
      ]
    }
  ],
  "post-processors": [
    {   
      "type": "vagrant",
      "compression_level": 9,
      "keep_input_artifact": false
    }
  ]
}
